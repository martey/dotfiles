set alias_file=~/.mutt/aliases
source ~/.mutt/aliases
source ~/.mutt/colors
alternative_order   text/enriched text/plain text/html
set autoedit=yes			# skip initial prompting
auto_view text/html
set check_new=yes			# check for mail while box is open
set charset="utf8"
set delete=yes				# auto-purge (the way Stalin likes it!)
set edit_headers=yes			# edit email headers
set editor="vim \"+set tw=79\""		# vim is not broken
set folder=~/mail			# mail folder
set hostname="marteydodoo.com"
set include=ask-yes			# include old msg text
set index_format="%4C %Z %{%b %d} %-35.35L (%5c) %s"
set send_charset="utf8"
set sig_on_top=no
set signature=~/.mutt/signature
set sort_aux="last-date-received"
set spoolfile=~/mail/inbox
set mark_old=no
set move=no
set postponed=~/mail/Drafts
set record=~/mail/Sent

# Header Weeding

unignore *
ignore Received                                                 # yeah, a bit insecure, i guess
ignore References
ignore Message-ID
ignore MIME-Version
ignore Content-Type
ignore Content-Length
ignore Content-Transfer-Encoding
ignore List                                                             # Mailing List stuff
ignore X-Mailman                                                # Mailman stuff
ignore User-Agent
ignore Status
ignore X-Authentication-Warning
ignore X-Mailer
ignore X-Priority
# now, an ugly Outlook header hit parade
ignore X-MimeOLE
ignore X-OlkEid
ignore X-MS
ignore X-Keywords
ignore X-Status
ignore X-Uid
ignore X-Spam-Status
ignore X-Spam-Level
ignore X-Spam-Checker-Version
ignore DKIM-Signature
ignore DomainKey-Signature
ignore Authentication-Results
ignore X-Original-To
ignore Delivered-To
ignore X-AntiAbuse
ignore Return-Path

ignore X-Virus-Scanned
ignore X-Forwarded-To
ignore X-Forwarded-For
# Key Bindings

bind index      <down>  next-undeleted
bind index      <up>    previous-undeleted

bind pager      <down>  next-line
bind pager      <right> next-undeleted
bind pager      <up>    previous-line
bind pager      <left>  previous-undeleted
